<?xml version='1.0' encoding='utf-8'?>
<widget id="guru.dateselection.calendar" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Guru Calendar</name>
    <description>
        Testujeme kalendar
    </description>
    <author email="separdsoft@gmail.com" href="dateselection.guru">
       Separd
    </author>
    
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-calendar" />
    <preference name="android-build-tool" value="gradle" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <icon src="img/logo-guru.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/logo-guru.png" qualifier="mdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/logo-guru.png" qualifier="mdpi" />
    </platform>
</widget>
